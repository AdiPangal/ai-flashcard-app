{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "compileOnSave": true,
  "include": [
    "src",
    "test-pipeline.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "noUnusedLocals": false,
      "noUnusedParameters": false
    }
  },
  "extends": "expo/tsconfig.base"
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - users can only read/write their own document
    // Document ID must match the authenticated user's UID
    match /users/{userId} {
      // Allow read and write only if the document ID matches the authenticated user's UID
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Deny access to subcollections (if you add any in the future)
      match /{document=**} {
        allow read, write: if false;
      }
    }
    
    // Deny all other collections and documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

